<div id="<%= dom_id payment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Payer email:</strong>
    <%= payment.payer_email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Payer name:</strong>
    <%= payment.payer_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Payer address:</strong>
    <%= payment.payer_address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Payer phone:</strong>
    <%= payment.payer_phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Stuff:</strong>
    <%= payment.stuff_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this payment", payment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this payment', edit_payment_path(payment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
